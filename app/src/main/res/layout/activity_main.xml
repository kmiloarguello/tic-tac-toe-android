<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="318dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/board"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/redChip1"
            android:layout_width="125dp"
            android:layout_height="90dp"
            android:layout_marginBottom="25sp"
            android:tag="0"
            android:onClick="dropInChip"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/redChip2"
            android:layout_width="123dp"
            android:layout_height="90dp"
            android:layout_marginBottom="25sp"
            android:tag="1"
            android:onClick="dropInChip"
            app:layout_column="1"
            app:layout_row="0"/>

        <ImageView
            android:id="@+id/redChip3"
            android:layout_width="118dp"
            android:layout_height="90dp"
            android:layout_marginBottom="25sp"
            android:tag="2"
            android:onClick="dropInChip"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/redChip4"
            android:layout_width="118dp"
            android:layout_height="90dp"
            android:layout_marginBottom="25sp"
            android:tag="3"
            android:onClick="dropInChip"
            app:layout_column="0"
            app:layout_row="1"/>
        <ImageView
            android:id="@+id/redChip5"
            android:layout_width="118dp"
            android:layout_height="90dp"
            android:layout_marginBottom="25sp"
            android:tag="4"
            android:onClick="dropInChip"
            app:layout_column="1"
            app:layout_row="1" />
        <ImageView
            android:id="@+id/redChip6"
            android:layout_width="118dp"
            android:layout_height="90dp"
            android:layout_marginBottom="25sp"
            android:tag="5"
            android:onClick="dropInChip"
            app:layout_column="2"
            app:layout_row="1" />
        <ImageView
            android:id="@+id/redChip7"
            android:layout_width="118dp"
            android:layout_height="90dp"
            android:tag="6"
            android:onClick="dropInChip"
            app:layout_column="0"
            app:layout_row="2"/>
        <ImageView
            android:id="@+id/redChip8"
            android:layout_width="118dp"
            android:layout_height="90dp"
            android:tag="7"
            android:onClick="dropInChip"
            app:layout_column="1"
            app:layout_row="2" />
        <ImageView
            android:id="@+id/redChip9"
            android:layout_width="118dp"
            android:layout_height="90dp"
            android:tag="8"
            android:onClick="dropInChip"
            app:layout_column="2"
            app:layout_row="2" />


    </android.widget.GridLayout>

    <LinearLayout
        android:id="@+id/playAgainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textWinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnPlayAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="playAgain"
            android:text="Play again" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
